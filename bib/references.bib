  month = jan,
  year = {2013},
  keywords = {grain yield,ALOG family,meristem identity},
  pages = {767-772},
  file = {/home/tom/Zotero/storage/8QZEMQA7/Yoshida et al. - 2013 - TAWAWA1, a regulator of rice inflorescence archite.pdf;/home/tom/Zotero/storage/72I26P8S/767.html},
